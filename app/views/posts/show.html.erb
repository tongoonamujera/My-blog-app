<% content_for :page_title, 'Posts' %>

<div class="columns is-centered">
  <div class="card is-notification column is-5">
    <div class="card-content">
      <div class="content">
        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>

        <p>
          <strong>Comment body:</strong>
          <%= @post.comment_body %>
        </p>
      </div>
    </div>
    <footer class="card-footer">
      <%= link_to 'Edit', edit_post_path(@post), class:"card-footer-item button is-success mx-1" %>
      <%= link_to 'Back', posts_path, class:"card-footer-item button is-success mx-1" %>
    </footer>
  </div>
</div>
